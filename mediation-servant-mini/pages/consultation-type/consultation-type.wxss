/* pages/consultation-type/consultation-type.wxss */
.lnkage-choice-wrap {
  width: 100%;
  height: auto;
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-bottom: 20rpx;
  font-size: 15px;
  background: #fff;
}
.lnkage-choice-wrap .title {
  padding-bottom: 40rpx;
  padding-top: 40rpx;
  line-height: 100%;
  color: #333;
}

.lnkage-choice-wrap .label-tag-wrap {
  width: 50%;
  height: auto;
  padding-left: 35rpx;
  padding-right: 35rpx;
  margin-bottom: 50rpx;
  line-height: 100%;
  float: left;
}
.lnkage-choice-wrap .label-tag-wrap label {
  width: 100%;
  line-height: 100%;
  padding-bottom: 18rpx;
  padding-top: 18rpx; 
  display: block;
  text-align: center;
  border-radius: 4px;
  border: 1px solid #e5e5e5;
  color: #999;
}
.lnkage-choice-wrap .label-tag-wrap label.active {
  background: #4895ff;
  color: #fff;
  border-color: #4895ff;
}
.lnkage-choice-wrap .label-tag-wrap label checkbox {
  display: none;
}
.button-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: auto;
}
.button-wrap button {
  width: 50%;
  float: left;
  border-radius: 0;
}
.button-wrap button.clear {
  background: #999999;
  color: #fff;
}
.button-wrap button.next {
  background: #4895ff;
  color: #fff;
}
/* pages/core.wxss */

.core-list-wrap {
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  background: #fff;
}
.core-list-wrap .list {
  position: relative;
  width: 100%;
  height: auto;
  padding-left: 104rpx;
}
.core-list-wrap .list:last-child .list-link:after {
  display: none;
}
.core-list-wrap .list .list-link {
  position: relative;
  display: block;
  width: 100%;
  height: auto;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
  padding-right: 24rpx;
  line-height: 100%;
  font-size: 16px;
  color: #333333;
  float: left;
}
.core-list-wrap .list .list-link:after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: #e5e5e5;
  content: "";
  display: block;
  transform: scaleY(0.5);
}
.core-list-wrap .list .iconfont {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  display: inline-block;
  line-height: 100%;
  padding: 10rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #fff;
  background: #a8a8a8;
  font-size: 16px;
  border-radius: 5px;
}
.core-list-wrap .list .iconfont.blue {
  background: #40a4f4;
}
.core-list-wrap .list .iconfont.green {
  background: #78c21d;
}
.core-list-wrap .list .iconfont.yellow {
  background: #f47f58;
}
.core-list-wrap .list .iconfont.ze {
  background: #ae8df5;
}
.core-list-wrap .list .iconfont.qs {
  background: #1dc9be;
}
.core-list-wrap .list .arrow {
  position: absolute;
  left: 700rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 10px;
  height: 10px;
  border-top: 1px solid #cbcbcb;
  border-right: 1px solid #cbcbcb;
  transform: rotate(45deg);
}
.button-box-core {
  width: 100%;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
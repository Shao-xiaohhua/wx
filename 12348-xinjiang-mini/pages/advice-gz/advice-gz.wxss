/* pages/advice-gz/advice-gz.wxss */
.banner-advice {
  width: 100%;
  height: 215rpx;
  background: #1788ce;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
}
.advice-wrap {
  width: 100%;
  height: auto;
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-top: -180rpx;
}
.advice-wrap .wrap {
  width: 100%;
  height: auto;
  padding-top: 10rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 60rpx;
  border-radius: 4px;
  background: #fff;
  overflow: hidden;
}
.advice-wrap .wrap .title {
  width: 100%;
  height: auto;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  line-height: 100%;
  font-size: 15px;
  color: #333;
}
.input-wrap {
  position: relative;
  width: 100%;
  height: auto;
}
.input-wrap .is-input {
  width: 100%;
  height: 88rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  font-size: 16px;
  background: #f5f5f5;
  border-radius: 4px;
}
.input-wrap .icon-wrap {
  position: absolute;
  right: 0;
  top: 0;
  width: 30px;
  height: 100%;
  line-height: 88rpx;
  z-index: 88;
}
.input-wrap navigator {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
  z-index: 99;
}
.input-wrap textarea {
  width: 100%;
  height: 422rpx;
  padding: 24rpx;
  font-size: 16px;
  background: #f5f5f5;
  border-radius: 4px;
}
form button {
  margin-top: 10rpx;
  border-radius: 0;
  background: #0e76bc;
  color: #fff;
}
.input-wrap .numberWrap {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  padding-right: 30rpx;
  text-align: right;
  line-height: 70rpx;
  font-size: 15px;
  color: #333;
}
.input-wrap .numberWrap .num {
  color: #999;
}
.advice-label {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 15px;
  color: #333;
  display: block;
}
.advice-label text {
  display: inline-block;
}
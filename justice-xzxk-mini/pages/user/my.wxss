/* pages/user/my.wxss */
.message-wrap {
  width: 100%;
  height: auto;
  padding: 40rpx 60rpx;
  background: #fff;
}
.message-wrap .pull-left {
  width: 116rpx;
  height: auto;
}
.message-wrap .pull-right {
  width: calc(100% - 116rpx);
  height: auto;
  padding-left: 40rpx;
}
.head-wrap {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  overflow: hidden;
}
.message-wrap .name {
  padding-top: 15rpx;
  font-size: 18px;
  color: #333;
}
.message-wrap .number {
  padding-top: 25rpx;
  line-height: 100%;
  font-size: 15px;
  color: #999;
}
.module-warp {
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.module-warp .module {
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  border-radius: 4px;
  background: #fff;
  overflow: hidden;
}
.number-list {
  position: relative;
  width: calc(100% / 3);
  height: auto;
  float: left;
  text-align: center;
}
.number-list navigator {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.number-list::after {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 1px;
  height: 50%;
  margin: auto;
  content: "";
  display: block;
  background: #eeeeee;
}
.number-list:nth-child(3n)::after {
  display: none;
}
.num-wrap {
  width: 100%;
  height: auto;
}
.num-wrap .number {
  margin-right: 10rpx;
  display: inline-block;
  font-size: 20px;
  color: #333;
}
.num-wrap .text {
  font-size: 12px;
  color: #999;
}
.module .type {
  margin-top: 16rpx;
  font-size: 13px;
  color: #6e6e6e;
}
.choice-list-wrap {
  width: 100%;
  height: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background: white;
}
.choice-list-wrap .list {
  position: relative;
  width: 100%;
  height: auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-right: 60rpx;
  text-align: left;
  font-size: 16px;
  color: #333;
}
.choice-list-wrap .list .iconfont {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.back-to-index {
  position: absolute;
  right: 0;
  top: 0;
  padding-top: 20rpx;
  padding-right: 30rpx;
  color: #333;
  font-size: 16px;
}
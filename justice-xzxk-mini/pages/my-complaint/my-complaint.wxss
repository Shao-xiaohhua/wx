/* pages/my-complaint/my-complaint.wxss */
.check-list {
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}
.check-list .list {
  position: relative;
  width: 100%;
  height: 80rpx;
  padding-left: 60rpx;
  line-height: 80rpx;
  font-size: 16px;
  color: #333;
  overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.check-list .list .icon-wrap {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
  font-size: 12px;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #eeeeee;
}
.check-list .list .icon-wrap .iconfont {
  display: none;
}
.check-list .list .icon-wrap.active {
  background: #5297fd;
}
.check-list .list .icon-wrap.active .iconfont {
  display: block;
}
.pd-warp {
  width: 100%;
  height: auto;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background: #fff;
}
.pd-warp .title {
  position: relative;
  width: 100%;
  height: 100rpx;
}
.pd-warp .title input {
  width: 100%;
  height: 100%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 16px;
  color: #333;
}
.pd-warp .content {
  position: relative;
  width: 100%;
  height: 340rpx;
  padding-top: 40rpx;
  padding-bottom: 90rpx;
}
.pd-warp .content textarea {
  width: 100%;
  height: 100%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 16px;
  color: #333;
}
.text-num {
  position: absolute;
  right: 0;
  bottom: 35rpx;
  color: #999;
  font-size: 12px;
}
.text-num .num {
  color: #333;
}
.btn-box {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
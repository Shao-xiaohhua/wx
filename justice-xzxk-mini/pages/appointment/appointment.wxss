/* pages/appointment/appointment.wxss */
.app-wrap {
  width: 100%;
  height: auto;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background: #fff;
}
.core-title {
  padding-bottom: 30rpx;
}
.input-list {
  position: relative;
  width: 100%;
  height: auto;
  font-size: 15px;
  color: #333;
}
.input-list .input-name {
  width: 35%;
  height: auto;
  padding-top: 12px;
  padding-bottom: 12px;
}
.input-list .input-wrap {
  width: 65%;
  height: 44px;
  padding-left: 15rpx;
  min-height: 50rpx;
}
.input-list.error .item-error {
  color: red;
}
.input-list.error .border-bottom {
  background: red;
}
.input-list .input-wrap picker, .input-list .input-wrap input {
  width: 100%;
  height: 100%;
  line-height: 44px;
  color: #333;
}
.err-text {
  width: 100%;
  height: auto;
  line-height: 100%;
  font-size: 12px;
  color: red;
  text-align: center;
}
.agentFilds-wrap {
  width: 100%;
  height: auto;
  background: transparent;
}
.apply-more {
  width: 100%;
  height: auto;
  display: none;
}
.apply-more.active {
  display: block;
}
.btn-box {
  padding-top: 60rpx;
  padding-bottom: 60rpx;
  background: #fff;
}
.input-list.error .item-error {
  color: red;
}
.input-list.error {
  color: red;
}
.input-list.error input {
  color: red;
}
.input-list.error .border-bottom {
  background: red;
}
.shadowWrap {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 888;
  display: none;
}
.shadowWrap.active {
  display: block;
}
.closeSearch {
  position: relative;
  width: 50px;
  height: 50px;
}
.closeSearch .clearLine {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 30px;
  height: 1px;
  background: #fff;
  transform: rotate(45deg);
}
.closeSearch .clearLine.active {
  transform: rotate(-45deg);
}
.shadoClear {
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  margin: auto;
  padding-top: 57rpx;
  padding-bottom: 50rpx;
  width: 550rpx;
  height: auto;
  text-align: center;
  border-radius: 4px;
  background: #fff;
}
.shadoClear text {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: block;
}
.shadoClear .name {
  font-size: 18px;
  color: #333;
}
.shadoClear .prompt {
  padding-top: 20rpx;
  font-size: 15px;
  color: #999;
}
.shadoClear .clear-btn {
  margin-top: 40rpx;
  padding: 30rpx 100rpx;
  line-height: 100%;
  font-size: 16px;
  color: #fff;
  display: inline-block;
  background: #ff3f3f;
  border-radius: 30px;
}
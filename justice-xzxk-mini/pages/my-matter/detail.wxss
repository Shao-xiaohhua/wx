/* pages/my-matter/detail.wxss */
.state-title {
  width: 100%;
  height: auto;
  padding: 40rpx;
  background: #fff;
}
.icon-box {
  width: 77rpx;
  height: 88rpx;
}
.text-box {
  width: calc(100% - 77rpx);
  height: auto;
  padding-left: 30rpx;
  font-size: 36rpx;
  color: #333;
  line-height: 100%;
}
.text-box.sm {
  padding-top: 20rpx;
  font-size: 30rpx;
}
.title-line {
  position: relative;
  width: 100%;
  height: auto;
  padding: 30rpx 50rpx;
  line-height: 100%;
  margin-top: 20rpx;
  font-size: 16px;
  color: #333;
  background: #fff;
}
.lint-title-line {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 30rpx;
  margin: auto;
  width: 6rpx;
  height: 16px;
  background: #5297fd;
  border-radius: 30px;
}
.state-list-box {
  width: 100%;
  height: auto;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-top: 38rpx;
  background: #fff;
}
.state-list-box .list {
  position: relative;
  width: 100%;
  height: 125rpx;
  padding-left: 70rpx;
  padding-right: 30rpx;
  color: #999999;
}
.state-list-box .list.pass {
  color: #333;
}
.state-list-box .list.now .circle {
  box-shadow: 0 0 0 6rpx #5297fd;
}
.state-list-box .list.pass .circle {
  left: -4rpx;
  width: 24rpx;
  height: 24rpx;
  text-align: center;
  line-height: 24rpx;
  background: #5297fd;
  box-shadow: none;
}
.state-list-box .list .iconfont {
  font-size: 15rpx;
  color: #fff;
  display: none;
}
.state-list-box .list.pass .iconfont {
  font-size: 15rpx;
  color: #fff;
  display: block;
}
.state-list-box .list .circle {
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 0 6rpx #ccc;
  z-index: 888;
}
.state-list-box .list .line {
  position: absolute;
  left: 5rpx;
  top: 29rpx;
  width: 1px;
  height: 50px;
  border-left: 1px dashed #ccc;
}
.state-list-box .list:last-child .line {
  display: none;
} 
.state-list-box .list .name {
  line-height: 100%;
  font-size: 16px;
}
.state-list-box .list .time {
  padding-top: 20rpx;
  line-height: 100%;
  font-size: 12px;
}
.message-list-wrap {
  width: 100%;
  height: auto;
  padding-bottom: 40rpx;
  background: #fff;
}
.message-list-wrap .list {
  position: relative;
  width: 100%;
  height: auto;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 40rpx;
  font-size: 15px;
}
.message-list-wrap .list .name {
  width: 250rpx;
  color: #333;
}
.message-list-wrap .list .cont {
  width: calc(100% - 250rpx);
  text-align: right;
  color: #999;
}

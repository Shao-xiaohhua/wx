@import "../../weui.wxss";
/**collection.wxss**/

.collection {
  position:relative;
  height:100%;

}
.list-block .list-item + .list-item {
  margin-top: 10px;
  border-top: 1rpx solid #e8e8e8;
}
.list-block .list-item {
  display: flex;
  padding: 15px;
  background-color: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}
.list-item .avatar-wrap{
  margin-top: 5px;
  width: 45px;
  height: 45px;
}
.list-item .avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
}
.list-item .content {
  padding-left: 10px;
}
.list-item .name {
  display: flex;
  align-items: center;
  line-height: 1.6;
  font-size: 17px;
  font-weight: 700;
  color: #353535;
}
.list-item .stafftype {
  margin-left: 10px;
  padding: 0px 6px;
  border-radius: 3px;
  font-weight: normal;
  font-size: 12px;
  color: #fff;
  background-color: #ddd;  
}
.list-item .info {
  font-size: 14px;
  font-weight: 300;
  color: #888;
}
.list-item .info .local {
  margin: 0 10px;
}
.list-item .iconfont {
  padding-right: 4rpx;
}
.list-item .title {
  padding-top: 10px;
  font-size: 17px;
  line-height: 100%;
}
.list-item .title .type {
  padding: 0 5px;
  color: #00cc99;
}
.list-item .desc {
  padding-top: 10px;
  line-height: 1.7;
  font-size: 14px;
  color: #666;
}
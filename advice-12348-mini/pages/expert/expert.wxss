@import "../../weui.wxss";
/* expert.wxss */
.media-list-block .list-item + .list-item {
  border-top: 1rpx solid #e8e8e8;
  margin-top: 10px;
}
.media-list-block .list-item{
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1rpx solid #e8e8e8;
  background-color: #fff;
}
.media-list-block .list-item:first-child {
  border-top: none;
}
.media-list-block .avatar {
  display: block;
  margin-right: 10px;
  width: 72px;
  height: 72px;
  border-radius: 50%;
}
.media-list-block .info {
  font-size: 14px;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.media-list-block .name {
  display: flex;
  align-items: center;
  line-height: 1.6;
  font-size: 17px;
  font-weight: 700;
  color: #353535;
}
.media-list-block .type {
  margin-left: 10px;
  padding: 0px 6px;
  border-radius: 3px;
  font-weight: normal;
  font-size: 12px;
  color: #fff;
  background-color: #ddd;  
}
.media-list-block .desc {
  display: flex;
  align-items: center;
  margin-top: 5px;
}
.media-list-block .tag {
  margin-left: 10px;
  padding: 0px 6px;
  border-radius: 3px;
  border: 1rpx solid #00cc99;
  font-weight: normal;
  font-size: 12px;
  color: #00cc99;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.media-list-block .org {
  margin-left: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.refresh-footer {
  text-align: center;
  padding: 10rpx 0;
}
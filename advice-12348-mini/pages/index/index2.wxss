.advice-form .weui-cell {
  padding: 10px;
  background-color: #f8f8f8;
}
.advice-form .weui-cells:before,
.advice-form .weui-cells:after {
  display: none;
}
.advice-form .weui-cell:before,
.advice-form .weui-cell:before {
  display: none;
}
.advice-form .weui-cells__title {
  padding-left: 0;
}
.advice-form .submit-btn {
  margin: 20px 0;
  padding: 5px;
  line-height: 1.8;
  font-size: 16px;
  border-radius: 0;
}
.advice-form .advice-desc {
  color: #bbb;
}
.index-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 40vh;
  background-color: #00cc99;
}
.index-bg:after {
  content: '';
  position: absolute;
  bottom: -10vh;
  height: 20vh;
  width: 100vw;
  border-radius: 50%;
  background-color: #00cc99;
}
.list-block {
  margin: 0 15px 0 15px;
  border-radius: 0 0 10px 10px;
  border-top: 10rpx solid #f8f8f8;
  box-shadow: 0 5px 10px rgba(0,0,0,.1);
  font-size: 16px;
  background-color: #fff;
}

/* pages/index/hotline.wxss */
.hotline-banner {
  height: 264rpx;
}
.hotline-cells__title {
  padding: 15px 15px 6px 15px;
  font-size: 15px;
  font-weight: 300;
  color: #686868;
}
.hotline-list {
  margin: 0 15px;
  border-radius: 4px;
  background-color: #fff;
}
.hotline-list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 15px;
  border-bottom: 1rpx solid #e8e8e8;
  font-size: 17px;
  color: #383838;
}
.hotline-list .iconfont {
  font-size: 20px;
  color: #bbb;
}
.hotline-list .item:last-child {
  border-bottom: none;
}
.version {
  text-align: center;
  font-size: 12px;
  margin-top: 30px;
  margin-bottom: 10px;
  color:#686868;
}
/* pages/index/rating.wxss */
.visitor {
  width: 100%;
  height: auto;
}
.law-card {
  margin: 0;
  padding: 15px;
  background-color: #fff;
}
.law-card .thumb {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.name-box {
  width: calc(100% - 60px);
  height: auto;
  padding-left: 10px;
  float: left;
}
.law-card .name {
  font-size: 19px;
  color: #333;
}
.law-card .name .small {
  font-size: 15px;
  padding-left: 6px;
  color: #8798af;
}
.law-card .desc {
  padding-top: 4px;
  font-size: 16px;
  color: #8798af;
}
.evaluate {
  padding: 0 15px;
  background-color: #fff;
}
.evaluate-list {
  position: relative;
  margin: 0;
  padding: 10px 0;
  list-style: none;
}
.row {
  display: flex;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-lines: multiple;
  flex-wrap: wrap;
  -webkit-box-align: start;
  align-items: flex-start;
}
.evaluate-list:before {
  content: '';
  position: absolute;
  left: 0;
  bottom: auto;
  right: auto;
  top: 0;
  height: 1px;
  width: 100%;
  background-color: #ddd;
  display: block;
  z-index: 15;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  transform: scaleY(0.5);
}
.row .col-33 {
  width: calc((100% - 15px*2) / 3);
}
.evaluate-list .evaluate-item.active {
  color: red;
}
.evaluate-list .evaluate-item {
  position: relative;
  display: block;
  text-align: center;
  font-size: 16px;
  color: #8798af;
}
.evaluate-list .evaluate-item .iconfont {
  font-size: 36px;
}
.evaluate-list .evaluate-item:after {
  content: '';
  position: absolute;
  left: auto;
  bottom: auto;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: #ddd;
  display: block;
  z-index: 15;
  -webkit-transform-origin: 100% 50%;
  transform-origin: 100% 50%;
  transform: scaleX(0.5);
}
.col-33:last-child .evaluate-item:after {
  display: none;
}
.comment-cell {
  margin-top: 10px;
  padding: 10px;
  background-color: #fff;
}
.comment-cell .tag-group {
  margin: 0;
  padding: 0;
  list-style: none;
}
.comment-cell .tag-group .list {
  box-sizing: border-box;
  float: left;
  padding: 6px;
  width: 33.333333%;
}
.comment-cell .tag-group .tag.active {
  color: #fff;
  background-color: #00cc99;
  border-color: #00cc99;
}
.comment-cell .tag-group .tag {
  display: block;
  padding: 6px 0;
  width: 100%;
  text-align: center;
  border-radius: 4px;
  box-shadow: 0 0 1px rgba(0,0,0,.3);
  color: #8798af;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}
.comment-cell .comment-box {
  padding: 15px 5px 10px;
}
.comment-cell textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
  box-sizing: border-box;
  border: 0;
  background: 0 0;
  border-radius: 4px;
  box-shadow: 0 0 1px rgba(0,0,0,.3);
  display: block;
  padding: 10px;
  margin: 0;
  width: 100%;
  color: #000;
  font-size: 17px;
  font-family: inherit;
  height: 100px;
  resize: none;
  line-height: 1.4;
  padding-top: 8px;
  padding-bottom: 7px;
}
.rating-btn {
  margin: 15px 0;
  background: #00cc99;
  color: #fff;
}
.staff {
  width: 100%;
  height: auto;
}
.feedback {
  padding: 10px 15px;
  background-color: #fff;
  display: block;
}
.feedback .form-group {
  position: relative;
}
.feedback .form-group:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: auto;
  top: auto;
  height: 1px;
  width: 100%;
  background-color: #ddd;
  display: block;
  z-index: 15;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  transform: scaleY(0.5);
}
.feedback .title {
  box-sizing: border-box;
  border: 0;
  background: 0 0;
  border-radius: 0;
  box-shadow: none;
  display: block;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 43px;
  color: #000;
  font-size: 17px;
  font-family: inherit;
}
.feedback .form-comment {
  padding-top: 15px;
}
.feedback textarea {
  box-sizing: border-box;
  border: 0;
  border-radius: 4px;
  display: block;
  padding: 10px;
  margin: 0;
  width: 100%;
  color: #000;
  font-size: 17px;
  font-family: inherit;
  height: 300px;
  resize: none;
  line-height: 1.4;
  padding-top: 8px;
  padding-bottom: 7px;
  background-color: #f7f8f9;
}